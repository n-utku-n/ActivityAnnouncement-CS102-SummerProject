<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefWidth="400" prefHeight="300"
            xmlns:fx="http://javafx.com/fxml/1"
            xmlns="http://javafx.com/javafx/8"
            fx:controller="com.project1.ForgotPasswordController">

    <VBox alignment="CENTER" spacing="20.0" layoutX="50" layoutY="50">
        <Label text="Reset Your Password" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
        <TextField fx:id="emailField" promptText="Enter your Bilkent email" />
        <Button fx:id="resetButton" text="Send Reset Link" onAction="#handleSendResetLink" />
        <Label fx:id="infoLabel" text="" />
    </VBox>
</AnchorPane>
